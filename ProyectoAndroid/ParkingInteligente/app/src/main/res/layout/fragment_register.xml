<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="284dp"
                android:layout_height="176dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:scaleType="center"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/register_image"
                android:tint="@color/colorSecondary" />

            <TextView
                android:id="@+id/textAviso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/warning"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="28dp"
                android:backgroundTint="@color/colorSecondary"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary" />

            <EditText
                android:id="@+id/textNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="28dp"
                android:backgroundTint="@color/colorSecondary"
                android:ems="10"
                android:hint="Nombre Usuario"
                android:inputType="text"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary" />

            <EditText
                android:id="@+id/textTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="28dp"
                android:backgroundTint="@color/colorSecondary"
                android:ems="10"
                android:hint="Telefono"
                android:inputType="phone"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary" />

            <EditText
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="28dp"
                android:backgroundTint="@color/colorSecondary"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary" />

            <EditText
                android:id="@+id/textContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="28dp"
                android:backgroundTint="@color/colorSecondary"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary" />

            <EditText
                android:id="@+id/textContrasena2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="28dp"
                android:backgroundTint="@color/colorSecondary"
                android:ems="10"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary" />

            <Button
                android:id="@+id/buttonCrearCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/button_border_bg"
                android:backgroundTint="@color/colorSecondary"
                android:text="@string/crear_cuenta_nueva" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>